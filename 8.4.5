#include <iostream>
#include <string>
using namespace std;

void generuj(int T[], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << "T[" << i << "]=";
        cin >> T[i];
    }
}

bool parzyste(int liczba)
{
    string str = to_string(liczba);
    for (int i = 0; i < str.size(); i++)
    {
        int t = str[i] - 48;
        if(t % 2 != 0) return false;
    }
    return true;
}

void pokaz(int T[], int n)
{
    for (int i = 0; i < n; i++)
    {
        if (parzyste(T[i]) == true)
        {
            cout << "T[" << i << "]=" << T[i] << " ";
        }
    }
}

int main()
{
    int T[1000]; 
    int n;
    cout << "Podaj n: ";
    cin >> n;
    generuj(T, n);
    pokaz(T, n);
    return 0;
}
