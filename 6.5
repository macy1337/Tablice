#include <iostream>
#include <string>
#include <cmath>
using namespace std;

bool is_prime(int n)
{
    if (n < 2) return 1;
    else for (int i = 2; i * i <= n; i++)
    {
        if (n % i == 0) return 0;
    }
    return 1;
}

bool mirror(int x_int, int y_int)
{
    string x = to_string(x_int);
    string y = to_string(y_int);

    if (x.size() != y.size()) return 0;
    for (int i = 0; i < x.size(); i++)
    {
        if (x[i] != y[y.size() - 1 - i]) return 0;
        
    }
    return 1;
}

int main()
{
    int x, y;
    cout << "Podaj x i y: ";
    cin >> x >> y;
    if (mirror(x, y) == 1)
    {
        if (is_prime(x) == 1 and is_prime(y))
        {
            cout << "Sa pierwsze";
        }
        else cout << "Nie sa pierwsze";
    }
    else
    {
        cout << "Nie sa lustrzane";
    }
}
