#include <iostream>
#include <cmath>
using namespace std;

bool is_prime(int n)
{
    if (n < 2) return 1;
    else for (int i = 2; i * i <= n; i++)
    {
        if (n % 2 == 0) return 0;
    }
    return 1;
}

bool is_n(int n)
{
    int x = sqrt(n);
    float y = sqrt(n);
    if (x == y)
    {
        return 1;
    }
    return 0;
}

int main()
{
    int n;
    cout << "Podaj n: ";
    cin >> n;
    if (is_n(n) == 1)
    {
        cout << is_prime(sqrt(n));
    }
    else cout << 0;
}
