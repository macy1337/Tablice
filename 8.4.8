#include <iostream>
using namespace std;

void generuj(float T[], int n)
{
    for (int i = 0; i < n; i++)
    {
        cout << "T[" << i << "]=";
        cin >> T[i];
    }
}

void pokaz(float T[], int n)
{
    for (int i = 0; i < n; i++)
    {
        if (T[i] < 0)
        {
            cout << "T[" << i << "]=" << 0 << " ";
        }
        else
        {
            cout << "T[" << i << "]=" << T[i] << " ";
        }
    }
}

int main()
{
    float T[1000];
    int n;
    cout << "Podaj n: ";
    cin >> n;
    generuj(T, n);
    pokaz(T, n);
    return 0;
}
