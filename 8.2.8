#include <iostream>
using namespace std;

int losuj(int a, int b)
{
    return (rand() % (b - a + 1)) + a;
}

void generuj(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        T[i] = losuj(1,10);
    }
}

void pokaz(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        cout << "T[" << i << "]=" << T[i] << " ";
    }
}

int najwieksza(int T[], int n)
{
    int max = T[0];
    for (int i = 1; i < n; i++)
    {
        if (T[i] > max)
        {
            max = T[i];
        }
    }
    return max;
}

void najmniejsza2(int T[], int n)
{
    int min = T[0];
    int min2 = najwieksza(T,n);
    int ilemin2 = 0;
    for (int i = 1; i < n; i++)
    {
        if (T[i] < min)
        {
            min = T[i];
        }
    }
    for (int i = 0; i < n; i++)
    {
        if (T[i] > min and T[i] < min2)
        {
            min2 = T[i];
        }
    }
    for (int i = 0; i < n; i++)
    {
        if (T[i] == min2)
        {
            ilemin2++;
        }
    }
    cout << endl << "T[min2]=" << min2 << ", powtarza sie " << ilemin2 << " razy" << endl;
}

int main()
{
    int T[1000];
    int n;
    cout << "Podaj n: ";
    cin >> n;
    srand(time(NULL));
    generuj(T, n);
    pokaz(T, n);
    najmniejsza2(T, n);
    return 0;
}
