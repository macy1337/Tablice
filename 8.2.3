#include <iostream>
using namespace std;

int los(int a, int b)
{
    return (rand() % b - a + 1) + a;
}

void generuj(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        T[i] = los(1,10);
    }
}

void pokaz(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        cout << "T[" << i << "]=" << T[i] << " ";
    }
}

void maks(int T[], int n)
{
    int max = T[0];
    int ilemax = 0;
    for (int i = 1; i < n; i++)
    {
        if (T[i] > max)
        {
            max = T[i];
        }
    }
    for (int i = 0; i < n; i++)
    {
        if (T[i] == max)
        {
            ilemax++;
        }
    }
    cout << "Najwieksza wartosc to: " << max << endl;
    cout << "Liczba najwieksza powtarza sie " << ilemax << " razy" << endl;
}

int main()
{
    int T[1000], n;
    cout << "Podaj n: ";
    cin >> n;
    srand(time(NULL));
    generuj(T, n);
    pokaz(T, n);
    maks(T, n);
}
