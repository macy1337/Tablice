#include <iostream>
using namespace std;

int losuj(int a, int b)
{
    return (rand() % (b - a + 1)) + a;
}

void generuj(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        T[i] = losuj(1,10);
    }
}

void pokaz(int T[], int n)
{
    for(int i = 0; i < n; i++)
    {
        cout << "T[" << i << "]=" << T[i] << " ";
    }
}

void najwieksza(int T[], int n)
{
    int max = T[0];
    int ilemax = 0;
    for (int i = 1; i < n; i++)
    {
        if (T[i] > max)
        {
            max = T[i];
        }
    }
    for (int i = 0; i < n; i++)
    {
        if (T[i] == max)
        {
            ilemax++;
        }
    }
    cout << endl << "T[max]=" << max << ", powtarza sie " << ilemax << " razy"  <<endl;
}

int main()
{
    int T[1000];
    int n;
    cout << "Podaj n: ";
    cin >> n;
    srand(time(NULL));
    generuj(T, n);
    pokaz(T, n);
    najwieksza(T, n);
    return 0;
}
