#include <iostream>
using namespace std;

void a(int T[], int n)
{
    cout << "a) ";
    for (int i = 0; i < n; i++)
    {
        T[i] = i;
        cout << "T[" << i << "]=" << T[i] << " ";
    }
    cout << "\n";
}

void b(int T[], int n)
{
    cout << "b) ";
    for (int i = 0; i < n; i++)
    {
        T[i] = 7 + i;
        cout << "T[" << i << "]=" << T[i] << " ";
    }
    cout << "\n";
}

void c(int T[], int n)
{
    cout << "c) ";
    int suma = 0;
    for (int i = 0; i < n; i++)
    {
        suma += 4;
        T[i] = suma;
        cout << "T[" << i << "]=" << T[i] << " ";
    }
    cout << "\n";
}

void d(int T[], int n)
{
    cout << "d) ";
    int iloczyn = 1;
    for (int i = 0; i < n; i++)
    {
        T[i] = iloczyn;
        iloczyn *= 2;
        cout << "T[" << i << "]=" << T[i] << " ";
    }
    cout << "\n";
}

void e(int T[], int n)
{
    cout << "e) ";
    for (int i = 0; i < n; i++)
    {
        T[i] = i + 2;
        cout << "T[" << i << "]=" << T[i] << " ";
    }
    cout << "\n";
}

int main()
{
    int T[1000];
    int n;
    cout << "Podaj n: ";
    cin >> n;
    a(T, n);
    b(T, n);
    c(T, n);
    d(T, n);
    e(T, n);
    return 0;
}
